@{
    Layout = "~/Views/Shared/_SelfLayoutHF.cshtml";
}

<script type="text/javascript" src="~/Scripts/js/app/GetProjects.js"></script>
<script id="zcxm-city" type="text/template">
    <%_.each(datas, function(item, index){ %>
        <a href="javascript:void(0);" city-id="<%= item.ID %>" city-value="<%= item.Value %>"><%= item.Name %></a>
    <%}); %>
</script>

<script id="zcxm-hang" type="text/template">
    <%_.each(datas, function(item, index){ %>
        <a href="javascript:void(0);" hang-id="<%= item.ID %>" hang-value="<%= item.Value %>"><%= item.Name %></a>
    <%}); %>
</script>

<script id="zcxm" type="text/template">
    <%_.each(datas, function(item, index){ %>
        <div class="cbInner">
            <div class=" thumbnail fl" style="width:280px; height:210px;padding:0;">
                <a href="GetProjectBasis?id=<%= item.ID %>"><img alt="" width="280" height="210" src="<%= item.ProjectPicture %>"></a>
            </div>
            <div class="fl" style="margin-left:20px;">
                <ul>
                    <li class="colTitle ct_2">
                    <a href="GetProjectBasis?id=<%= item.ID %>"><%= item.ProjectName %></a>
                    <div class="timeFb">发布时间：<%= item.StartTime %></div>
                    </li>
                    <li class="rzje">
                        <div>融资金额:<em class="ct_8"><%= item.PlanAmount/10000 %>万</em></div>
                        <div>已融金额:<em class="ct_8"><%= item.FinishedAmount/10000 %>万</em></div>
                        <div>起投金额:<span class="f_ora ct_8"><%= item.MinInvestAmount/10000 %>万</span></div>
                        <div>认投完成率：<span class="f_ora ct_8"><%= (item.FinishedRate*100).toFixed(2) %>%</span></div>
                    </li>
                </ul>
                <ul class="detailList">
                <li><i class="fa fa-caret-right"></i><span class="grey"> 地区：</span><%= item.ProjectCity %><span class="pad_01"><span class="grey" style="margin-left:10px;">行业：</span><%= item.Industry %></span><span class="pad_01"><%= item.Status %></span></li>
                 <li class="ddse"><span class="ct_7 ct_701"> 项目简介：</span><%= item.ProjectIntroduction %></li>

                </ul>
            </div>
            <div class="clearfix"></div>

        </div>
    <%}); %>
</script>
