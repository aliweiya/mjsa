@{
    Layout = "~/Views/Shared/_FirstMenuLayout.cshtml";
}
@{ViewBag.ContentName = "申请成为个人项目(融资)方";}
@model  ZCPT.CrowdFunding.Web.Models.CFFinancingPartyModule.FinancingPartyValueObject
<div class="alert alert-info" role="alert">@ViewBag.Message</div>



        @Html.HiddenFor(M => M.ID)
        <div class="form-horizontal">
            <input type="hidden" name="siteid" value="">
            
                <div  class="form-group">
                    <label class="col-sm-2 control-label">用户类型：</label>
                    <div class="col-sm-6">

                        <input type="radio" value="0" name="usertype" checked="checked" disabled />个人
                        <input type="radio" value="1" name="usertype" disabled onclick="if (this.checked) { window.location = 'OrganizationApply' }" />机构
                    </div>
                </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">用户名：</label>
                <div class="form-control-static col-sm-6">@ViewData["CFAccountName"]</div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">个人资产：</label>
                <div class="col-sm-6">
                    @foreach (var item in ViewBag.AssetsTypeValues)
                    {
                        @Html.RadioButton("AssetsTypeValue", (string)item.Value,new { @disabled = "disabled" }) @item.Text
                    }

                    <span id="mailTip" class="onShow"> (个人投资者必须符合其中一项)</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">昵称：</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control", @disabled = "disabled" })

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">个人说明：</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Introduction, new { @class = "form-control", @disabled = "disabled" })
                    <span id="personal_noteTip" class="onShow"> (如果昵称不是真实姓名，个人说明建议采用公司+职务+真实姓名)</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">所在城市：</label>
                <div class="col-sm-6">

                    @Html.DropDownListFor(m => m.CFCityIdValue, ViewBag.CFCityLists as IEnumerable<SelectListItem>, new { @class = "form-control", @disabled = "disabled" })

                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="Name">真实姓名：</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @disabled = "disabled" })
                    <span class="help-block"> (前台不显示，用于网站运营管理人员替您办理投融资手续时使用)</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">身份证号：</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.IdentificationCard, new { @class = "form-control", @disabled = "disabled" })
                    <span class="help-block"> (前台不显示，用于网站运营管理人员替您办理投融资手续时使用)</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">个人住址：</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @disabled = "disabled" })
                    <span class="help-block"> (用于办理投资入股工商变更手续及快递接收)</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">手机号码：</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @disabled = "disabled" })

                    <span class="help-block"> (前台不显示，用于网站运营管理人员替您办理投融资手续时使用)</span>
                </div>
            </div>

            
        </div>


