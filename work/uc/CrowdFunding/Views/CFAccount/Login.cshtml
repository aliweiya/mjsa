@using ZCPT.CrowdFunding.Web.Models.AccountModule

@model AccountViewModel
@{
    ViewBag.Title = "登录";
}
    <title>优创融资平台用户登录</title>

    <script src="~/Scripts/js/app/CFAccountLogin.js" type="text/javascript"></script>
<style>
.left .img { width: 140px; height: 100px; margin-top: 30px; background: url(@Url.Content("~/Content/img/icon_zc.png")) center center no-repeat; }
.mlbox .ml1 { background-image: url(@Url.Content("~/Content/img/ml1.png")); }
.mlbox .ml2 { background-image: url(@Url.Content("~/Content/img/ml2.png")); }
.login_zc { width: 500px; margin: 60px auto; filter: progid:DXImageTransform.Microsoft.Shadow(color=#909090, direction=120, strength=3); -moz-box-shadow: 2px 2px 10px #909090; -webkit-box-shadow: 2px 2px 10px #909090; box-shadow: 2px 2px 10px #909090; }
.login_zc .left { background: #0086bb; width: 140px; float: left; height: 290px; }
.login_zc .left p { color: #fff; font-size: 18px; text-align: center; margin-top: 40px; }
.mlform { display: block; width: 280px; height: 210px; padding: 40px; float: right; }
.FMain { background: #f6f6f6; }
.mlbox { float: left; height: 35px; width: 275px; margin: 5px auto; border: 1px solid #cecece; border-radius: 3px; position: relative; }
.mlbox .mlbtn { float: left; display: inline; height: 35px; width: 40px; background-color: #e5e6e7; background-position: center center; background-repeat: no-repeat; }
.mlbox input { width: 210px; height: 30px; border: 0 none; background: transparent; float: left; display: inline; padding-left: 20px; }
.mlbox input::-webkit-input-placeholder { color: #888; }
.mlbox input::-moz-placeholder { color: #888; }
.mlbox input:-moz-placeholder { color: #888; }
.mlbox input:-ms-input-placeholder { color: #888; }
.mlbox input { line-height: 35px; }
.mlbox .lfbtn { width: 276px; line-height: 20px; height: 35px; color: #fff; border-radius: 6px; float: none; margin-left: 0; letter-spacing: 20px; font-size: 1.2em; background-color: #0086BB; }
.mlbox #username { min-width: 210px !important; }
.mlnbox { border: 0 none; }
.forgetbox { height: 16px; line-height: 16px; margin: 5px auto 5px auto; }
.herrbox { color: #ee0800; line-height: 15px; width: 100%; height: 15px; margin: 0; float: left; display: inline; }
.clear { clear: both; }
</style>

<div class="login_zc">
    <div class="left">
        <p>优创融资登录</p>
        <div class="img"></div>
    </div>
    <form class="mlform" action="@string.Format("{0}{1}",System.Configuration.ConfigurationManager.AppSettings["ServerReferenceUserCenter"],"/Account/Login")" method="post" style="float:left;">
        @Html.Hidden("FromApp", new AccountViewModel().FromAPP)
        
        <div class="mlbox">
            <div class="mlbtn ml1"></div>
            <input type="text" name="username" placeholder="请输入用户名" id="username" value="" class="username">
        </div>      
        <div class="herrbox"><div><span style="color:red;"></span></div></div>          
        <div class="mlbox">
            <div class="mlbtn ml2"></div>
            <input type="password" name="password" placeholder="请输入密码" id="password" value="">
        </div>
        <div class="herrbox"><div><span style="color:red;">@ViewBag.LoginState</span></div></div>
        <div class="mlbox mlnbox forgetbox">
            <a href="@string.Format("{0}{1}", System.Configuration.ConfigurationManager.AppSettings["ServerReferenceUserCenter"], "/Account/ConfirmIndex")" class="forgetp fr" target="_blank">忘记密码？</a>
        </div>

        <div class="mlbox mlnbox">
            <input type="submit" id="msubmit" class="lfbtn" value="登录" />
        </div>
        <div class="herrbox"></div>
    </form>
    <br class="clear" />
</div>

