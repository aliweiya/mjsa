<link rel="stylesheet" type="text/css" href="~/Content/css/yc_productlist.css"  />
<div class="row yc_container">
    <div class="col-md-8 yc_left">
            <ul class="row yc_list" id="yc_list01"></ul>
    </div>
    <div class="col-md-4">
        <div class="yc_right">
            <div class="recommend_top">优质服务推荐</div>
            <ul class="recommend" id="recommend01"></ul>
        </div>
    </div>
