<!-- 左侧服务库列表 -->
  <script type="text/template" id="productListTpl">

    <%_.each(datas, function(item, i){ %>
        <li class="col-md-4">
            <div class="img_box">
                <a href="@(System.Configuration.ConfigurationManager.AppSettings["ServerReferenceCrowdSourcing"])/productlist/productdetail/<%= item.ID %>"><img src="@(System.Configuration.ConfigurationManager.AppSettings["ServerReferenceFileCenterAPI"])/fileupload/ImgDownload/<%= item.IconID %>"/></a>
                <dl class="mess_yc">
                    <dd><a href="@(System.Configuration.ConfigurationManager.AppSettings["ServerReferenceCrowdSourcing"])/productlist/productdetail/<%= item.ID %>"><%= item.Name %></a></dd>
                    <dd class="yc_price"><%= item.Price %> 元</dd>
                </dl>
                <dl class="jc_yc">
                    <dd class="jc_title"><%= item.Shop %></dd>
                    <dd class="yc_description"><%= item.Description %></dd>
                </dl>
            </div>
        </li>
    <%}); %>
</script>
<!-- 右侧优质服务推荐列表 -->
  <script type="text/template" id="productServiceTpl">

    <%_.each(datas, function(item, i){ %>
        <li class="row">
            <div class="col-md-4">
                <a href="@(System.Configuration.ConfigurationManager.AppSettings["ServerReferenceCrowdSourcing"])/productlist/productdetail/<%= item.ID %>"><img src="@(System.Configuration.ConfigurationManager.AppSettings["ServerReferenceFileCenterAPI"])/fileupload/ImgDownload/<%= item.IconID %>"/></a>
            </div>
            <div class="col-md-8">
                <dl class="mess_yc mess_yc01">
                    <dd><a href="@(System.Configuration.ConfigurationManager.AppSettings["ServerReferenceCrowdSourcing"])/productlist/productdetail/<%= item.ID %>"><%= item.Name %></a></a></dd>
                    <dd class="yc_price"><%= item.Price %> 元</dd>
                    <dd class="comm_yc"><%= item.Description %></dd>
                </dl>
            </div>
        </li>
    <%}); %>
</script>
